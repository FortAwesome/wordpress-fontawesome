{
  "$schema": "/phpactor.schema.json",
  "language_server": {
    "diagnostic_exclude_paths": ["**/wp-dist", "**/integrations/**/vendor"]
  },
  "indexer": {
    "exclude_patterns": ["**/wp-dist", "**/integrations/**/vendor"]
  },
  "php_code_sniffer.enabled": true,
  "php_code_sniffer.args": ["--standard=.phpcs.xml"]
}
