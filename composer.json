{
    "name": "fortawesome/wordpress-fontawesome",
    "description": "Official Font Awesome WordPress plugin composer package.",
    "keywords": [ "font awesome", "font-awesome", "icon", "icons", "webfont", "svg" ],
    "homepage": "https://fontawesome.com",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Mike Wilkerson",
            "email": "mwlkerson@gmail.com",
            "role": "Developer"
        }
    ],
    "support": {
        "email": "hello@fontawesome.com"
    },
    "archive": {
        "exclude": [
            "/images",
            "/integrations",
            "/tests",
            ".gitattributes",
            ".github",
            ".gitignore",
            ".travis.yml",
            "/images",
            "phpunit.xml.dist",
            "phpcs.xml.dist",
            "/.git",
            "proxy-webpack-dev.conf",
            "readme.txt",
            "docker-php-ext-xdebug.ini",
            "docker-compose.yml",
            "/bin",
            "admin/config",
            "admin/src",
            "admin/scripts",
            "Dockerfile",
            ".env",
            "DEVELOPMENT.md"
        ]
    },
    "require": {
        "composer/semver": "^1.4",
        "mustangostang/spyc": "^0.6.2",
        "guzzlehttp/guzzle": "~6.0"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.3",
        "wp-coding-standards/wpcs": "^1.2",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.5.0"
    },
    "scripts": {
        "phpcs": "phpcs --standard=phpcs.xml.dist",
        "phpcbf": "phpcbf --standard=phpcs.xml.dist",
        "test": "bin/phpunit",
        "clean": "rm -fR wp-dist; rm -fR admin/build; rm -fR vendor; rm -f font-awesome-official.zip",
        "build.admin": "cd admin; yarn build",
        "dist": "composer clean && composer build.admin && bin/make-wp-dist"
    }
}
